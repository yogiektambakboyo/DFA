<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#bfbfbf">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip" android:layout_marginBottom="2dip" android:paddingTop="2dip"
            android:paddingBottom="2dip">

        <LinearLayout
                android:layout_width="270dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/Faktur_KKDV"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:paddingTop="6dip"
                    android:paddingBottom="2dip"
                    android:layout_marginLeft="5dip" android:text="Faktur" android:textStyle="bold"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" android:layout_marginLeft="7dip">
                <TextView
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:text="Tgl"
                        android:id="@+id/TextView" android:layout_gravity="left|center_vertical" android:textSize="12sp"
                        android:textColor="#ffffff"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tgl"
                        android:id="@+id/Faktur_Tgl" android:layout_gravity="left|center_vertical" android:textSize="12sp"
                        android:textColor="#ffffff" android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" android:layout_marginLeft="7dip">
                <TextView
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:text="Jml Faktur"
                        android:id="@+id/TextView" android:layout_gravity="left|center_vertical" android:textSize="12sp"
                        android:textColor="#ffffff"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faktur"
                        android:id="@+id/Faktur_Faktur" android:layout_gravity="left|center_vertical" android:textSize="12sp"
                        android:textColor="#ffffff" android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>