<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" android:background="@android:color/white">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="40dip" android:layout_marginBottom="10dip"
                      android:background="@drawable/wh_taskbg" android:layout_gravity="center">
            <TextView
                    android:layout_width="256dip"
                    android:layout_height="40dip"
                    android:text="TOLAKAN"
                    android:id="@+id/txtMainMenuUtama" android:textSize="25sp"
                    android:textColor="@android:color/white" android:textStyle="bold"
                    android:gravity="center_vertical|left" android:layout_gravity="center" android:layout_marginLeft="10dip"
                    />
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="fill_parent" android:layout_marginBottom="3dip"
                          android:layout_gravity="left"
                          android:gravity="end" android:paddingRight="5dip">
                <ImageView
                        android:layout_width="42dip"
                        android:layout_height="42dip"
                        android:id="@+id/Tolakan_ImgFilter" android:src="@drawable/imgbtn_filter"
                        android:layout_gravity="center_vertical|right"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/search"
                    android:layout_width="526dip"
                    android:layout_height="40sp" android:singleLine="true" android:textSize="14sp"
                    android:hint="Masukkan Kata Kunci" android:maxLength="12">
            </EditText>
            <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:id="@+id/imageView" android:background="@drawable/dfa_search"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="230dip"
                    android:layout_height="wrap_content"
                    android:text="Nama "
                    android:id="@+id/textView" android:textSize="16sp" android:textStyle="bold"
                    android:textColor="#3399FF" android:paddingLeft="5dip"/>
            <TextView
                    android:layout_width="110dip"
                    android:layout_height="wrap_content"
                    android:text="CRT"
                    android:id="@+id/textView" android:textSize="16sp" android:textStyle="bold"
                    android:textColor="#3399FF" android:paddingLeft="10dip"/>
            <TextView
                    android:layout_width="110dip"
                    android:layout_height="wrap_content"
                    android:text="PCS"
                    android:id="@+id/textView" android:textSize="16sp" android:textStyle="bold"
                    android:textColor="#3399FF" android:paddingLeft="10dip"/>
        </LinearLayout>
        <ListView
                android:id="@+id/listview"
                android:layout_width="fill_parent"
                android:layout_height="600dip"
                android:layout_below="@+id/search" android:layout_above="@+id/linearLayout"/>

    </LinearLayout>
    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_gravity="bottom"
                   android:paddingTop="5dip" android:orientation="horizontal"
                   android:gravity="center_horizontal|left" android:paddingBottom="5dip"
                   android:background="#3399FF" android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="476dip"
                android:layout_height="fill_parent" android:layout_gravity="left" android:gravity="left"
                android:paddingLeft="5dip">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="476dip"
                    android:layout_height="wrap_content" android:layout_gravity="left" android:gravity="left"
                    >
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_gravity="left" android:gravity="left"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Rp :"
                            android:id="@+id/TextView" android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Rp. "
                            android:id="@+id/TextView" android:textStyle="bold" android:textColor="#FF0000"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_gravity="left" android:gravity="left"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rupiah"
                            android:id="@+id/Tolakan_TxtBarangListPrice" android:textStyle="bold"
                            android:textColor="#FF0000"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="476dip"
                    android:layout_height="wrap_content" android:layout_gravity="left" android:gravity="left"
                    >
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_gravity="left" android:gravity="left"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total SKU : "
                            android:id="@+id/TextView" android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_gravity="left" android:gravity="left"
                        >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SKU Total"
                            android:id="@+id/Tolakan_TxtBarangListChecked" android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dip"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:id="@+id/Tolakan_BtnSubmit" style="@style/btnStyleGreen" android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>