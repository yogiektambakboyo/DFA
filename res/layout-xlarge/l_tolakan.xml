<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="40dip" android:layout_alignParentLeft="true" android:layout_marginLeft="5dip"
            android:paddingTop="5dip" android:paddingBottom="5dip" android:background="@android:color/white">

        <TextView
                android:id="@+id/Tolakan_TxtSKUCode"
                android:layout_width="90dip"
                android:layout_height="wrap_content"
                android:text="SKUCode" android:layout_gravity="center_horizontal|top"
                android:layout_marginRight="5dip" android:textSize="12sp" android:layout_marginTop="2dip"
                android:textColor="#3399FF" android:visibility="gone"/>
        <TextView
            android:id="@+id/Tolakan_TxtHint"
            android:layout_width="230dip"
            android:layout_height="wrap_content"
            android:text="Keterangan" android:textSize="11sp" android:layout_gravity="top"
            android:textColor="#3399FF" android:paddingLeft="5dip"/>
        <TextView
                android:id="@+id/Tolakan_TxtCRT"
                android:layout_width="110dip"
                android:layout_height="wrap_content"
                android:text="CRT" android:textSize="12sp" android:layout_gravity="top"
                android:textColor="#3399FF" android:paddingLeft="10dip"/>
        <TextView
                android:id="@+id/Tolakan_TxtJml"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:text="Jml" android:textSize="12sp" android:layout_gravity="top"
                android:textColor="#3399FF" android:visibility="gone"/>
        <TextView
                android:id="@+id/Tolakan_TxtPCS"
                android:layout_width="110dip"
                android:layout_height="wrap_content"
                android:text="PCS" android:textSize="12sp" android:layout_gravity="top"
                android:textColor="#3399FF" android:paddingLeft="10dip"/>
        <TextView
                android:id="@+id/Tolakan_TxtAssigned"
                android:layout_width="20dip"
                android:layout_height="wrap_content" android:text="Assigned"
                android:layout_gravity="center_horizontal|top" android:textSize="13sp" android:visibility="gone"/>
        <TextView
                android:id="@+id/Tolakan_TxtRasioMax"
                android:layout_width="20dip"
                android:layout_height="wrap_content" android:text="RasioMax"
                android:layout_gravity="center_horizontal|top" android:textSize="13sp" android:visibility="gone"/>
        <TextView
                android:id="@+id/Tolakan_TxtJmlFakturCRT"
                android:layout_width="20dip"
                android:layout_height="wrap_content" android:text="RasioMax"
                android:layout_gravity="center_horizontal|top" android:textSize="13sp" android:visibility="gone"/>
        <ImageView
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:id="@+id/Tolakan_ImgCheck" android:layout_gravity="center_horizontal|top"/>

    </LinearLayout>

</LinearLayout>