<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:id="@+id/PembayaranListLayout" android:layout_marginLeft="10dip"
            android:background="@android:color/white">



        <!-- Name Label -->


        <ImageView
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:id="@+id/PembayaranimageViewOP" android:layout_gravity="center|top"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"/>
        <LinearLayout
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/Pembayaran_Nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3399FF"
                    android:textSize="18sp"
                    android:paddingTop="6dip"
                    android:paddingBottom="2dip"
                    android:layout_marginLeft="5dip" android:text="Nama Task" android:textStyle="bold"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Pembayaran_ID"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dip" android:textColor="#000000" android:text="Kode"
                    android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" android:gravity="center_vertical|right"
                android:layout_marginRight="10dip">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Pembayaran_ArrowNav" android:layout_gravity="center_vertical|right"
                    android:background="@drawable/arrow_left"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>