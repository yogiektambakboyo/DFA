<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="25dip" android:layout_alignParentLeft="true" android:layout_marginLeft="5dip"
            android:paddingTop="5dip" android:paddingBottom="5dip" android:background="@android:color/white">

        <TextView
                android:id="@+id/Barang_TxtSKUCode"
                android:layout_width="90dip"
                android:layout_height="wrap_content"
                android:text="SKUCode" android:layout_gravity="center_horizontal|top"
                android:layout_marginRight="5dip" android:textSize="12sp"
                android:textColor="#3399FF"/>
        <TextView
                android:id="@+id/Barang_TxtHint"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:text="Keterangan" android:textSize="12sp" android:layout_gravity="top"
                android:textColor="#3399FF"/>
        <TextView
                android:id="@+id/Barang_TxtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Harga"
                android:layout_gravity="center_horizontal|top" android:textSize="12sp" android:textColor="#3399FF"/>
        <TextView
                android:id="@+id/Barang_TxtAssigned"
                android:layout_width="20dip"
                android:layout_height="wrap_content" android:text="Assigned"
                android:layout_gravity="center_horizontal|top" android:textSize="13sp" android:visibility="gone"/>
        <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:id="@+id/Barang_ImgCheck" android:layout_gravity="center_horizontal|top"
                android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>